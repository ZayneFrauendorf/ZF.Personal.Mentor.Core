@model ZF.Personal.Mentor.Core.Web.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Edit";
}
<div class="profile-index-ctr">
    @if (Model.DisplayName == null && Model.Description == null && Model.FirstName == null && Model.LastName == null)
    {
        <h4 style="color: white; font-size: 24px;">Take a minute to create your portfolio..</h4>

    }
    else if (Model.DisplayName == null || Model.Description == null || Model.FirstName == null || Model.LastName == null)
    {
        <h4 style="color: white; font-size: 24px;">We've noticed some missing info. Care to fill it in?</h4>
    }
    <div class="profile-index-content">

        <hr />
        @*<div>
            <div>*@
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="authenticate">
                <label asp-for="DisplayName" class="header"></label>
                <input asp-for="DisplayName" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="authenticate">
                <label asp-for="FirstName" class="header"></label>
                <input asp-for="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="authenticate">
                <label asp-for="LastName" class="header"></label>
                <input asp-for="LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="authenticate">
                <label asp-for="Description" class="header"></label>
                <input asp-for="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="authenticate">
                <label class="header">Profile Picture</label>
                <input type="file" name="file" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Save" class="edit-button" />
            </div>
        </form>
        @*</div>
            </div>*@
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
